{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://dwarly-production.up.railway.app/api/$1" },
    { "source": "/sitemap.xml", "destination": "/api/sitemap.xml" },
    { "source": "/robots.txt", "destination": "/api/robots.txt" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
}
